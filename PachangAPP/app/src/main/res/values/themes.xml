<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PanchagAPP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepblue</item>
        <item name="colorPrimaryVariant">@color/greyblue</item>
        <item name="colorOnPrimary">@color/skin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/skin</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Primary background color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:panelColorBackground">@color/material_dynamic_neutral70</item>
        <item name="colorOnBackground">@color/greyblue</item>
        <!-- Customize your theme here. -->
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.PanchagAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.PanchagAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PanchagAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PanchagAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>